<div class="container mt-5 p-5 bg-gray-900 rounded-lg shadow-md max-w-md mx-auto">
  <h2 class="text-4xl font-bold mb-6 text-gray-100">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field mb-4 text-gray-100">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="field mb-4 text-gray-100">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-md bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="field mb-4 text-gray-100">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-md bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="field mb-4 text-gray-100">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-md bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="actions mb-4">
      <%= f.submit "Sign up", class: "w-full px-3 py-2 rounded-md bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
    </div>
  <% end %>
  <div class="text-gray-100">
    <%= render "devise/shared/links" %>
  </div>
</div>